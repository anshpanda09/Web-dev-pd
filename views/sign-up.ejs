  <body>
    <div class="content">
      <h2>Sign up to your new diary</h2>
      <form class="" action="/sign-up" method="POST">
       <div class="form-content">
          <div>
            <input class="inputs" type="text" name="usernameSignup" value="" placeholder="username">
          </div>
          <div>
            <input class="inputs" type="password" name="passwordSignup" value="" placeholder="password">
          </div>
          <button type="submit" name="button"> Sign Up</button>
          <a class="btn btn-light btn-lg  " href="/" role="button">Home </a>
       </div>
      </form>
      <p>
        <%= info %>
      </p>
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
